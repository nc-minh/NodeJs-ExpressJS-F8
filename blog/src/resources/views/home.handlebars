<div class="container mt-4">
    <div class="row">
        {{#each posts}}
        <div class="col-12 col-sm-6 col-md-4">
            <a href="posts/{{this.slug}}" class="card" style="width: 18rem;">
                <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                <div class="card-body">
                    <p class="card-text">{{this.name}}</p>
                </div>
            </a>
        </div>
        {{/each}}
    </div>
</div>